                    </Viewbox>

                    <Button.ToolTip>
                        <ToolTip>
                            <StackPanel>
                                <TextBlock FontWeight="Bold">Generate g-code</TextBlock>
                                <TextBlock>Shows a save file dialog.</TextBlock>
                            </StackPanel>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <Grid Name="Stage" Grid.Row="2">
        </Grid>

    </Grid>
</Window>
